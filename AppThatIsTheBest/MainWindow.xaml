<Window x:Class="AppThatIsTheBest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppThatIsTheBest"
        mc:Ignorable="d"
        Title="Click It!" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label FontSize="60" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">Click Me!</Label>
            <Button Content="click!" FontSize="30" Width="200" Height="100" Name="Button" Click="Button_OnClick"></Button>
            <Label FontSize="45" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Name="timesClicked"> You have clicked 0 times</Label>
        </StackPanel>
    </Grid>
</Window>
